<div id="quotes" class="transitions-enabled">
	<% @quotes.each do |quote| %>
		<div class="box panel panel-default">
		
			<%= link_to image_tag(quote.image.url(:medium)), quote %>
			<div class="panel-body">
				<%= quote.season %>
				<%= quote.episode %>
				<%= quote.character %>
				<p><%= quote.description %></p>
				<p><strong><%= quote.user.email if quote.user %></strong></p>
				<% if quote.user == current_user %>
					<%= link_to edit_quote_path(quote) do %>
						<span class="glyphicon glyphicon-edit"></span> Edit
					<% end %>
				<%= link_to quote, method: :delete, data: { confirm: 'Are you sure?' } do %>
						<span class="glyphicon glyphicon-trash"></span> Delete
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>