<h1>Listing quotes</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Episode</th>
      <th>Character</th>
      <th>Description</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.season %></td>
        <td><%= quote.episode %></td>
        <td><%= quote.character %></td>
        <td><%= quote.description %></td>
				<td><%= quote.user.email if quote.user %></td>
        <td><%= link_to 'Show', quote %></td>
				<% if quote.user == current_user %>
					<td><%= link_to 'Edit', edit_quote_path(quote) %></td>
					<td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
	<%= link_to 'New Quote', new_quote_path %>
<% end %>